<body class="content-body">
    <section class="notes">
        <h1>Notes</h1>
        <form id="notes-form" action="submit">
            <div class="note-body-container">
                <textarea id="notes-body" cols="50" rows="30"></textarea>
            </div>
            <div class="note-inputs-container">
                <label for="notes-title">Note Title</label>
                <input id="notes-title" placeholder="Title" />
                <button type="submit" id="notes-but"> Save Note</button>
            </div>
        </form>
        <ul class="note-list-container">
            {{#each notes as |note|}}
                <li class="list-item note-item" data-id={{note.id}}>
                    <div>
                        <h3>
                            {{note.title}}
                        </h3>
                        <p>
                            {{note.text}}
                        </p>
                    </div>
                    <div class="note-delete-button">x</div>
                </li>
            {{/each}}
        </ul>
    </section>
    <section class="todo">
        <h1>To-Do </h1>
        <div>
            <form action="submit" id="todos-form">
                <div class="todo-inputs-container">
                    <label for="todo-title">Title</label>
                    <input type="text" id="todo-title" />
                    <label for="todo-due-input">Due By</label>
                    <input type="datetime-local" id="todo-due-date" />
                    <button id="todo-but">Save To-Do</button>
                </div>
            </form>
            <ul class="todo-list-container">
                {{#each todos as |todo|}}
                    <li class="list-item todo-item" data-id={{todo.id}}>
                        <div>
                            <h3>
                                {{todo.title}}
                            </h3>
                            <p>
                                {{format_date todo.due_date}}
                            </p>
                        </div>
                        <div class="todo-delete-button">x</div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </section>
    <div class="ran-act">
        <H4>Huh I really have nothing to do?!</H4>
        <input />
        <!-- is textarea better for API -->
        <button id="nothing"> Something </button>
    </div>
    <script src="js/index.js"></script>
</body>